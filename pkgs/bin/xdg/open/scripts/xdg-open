#!/usr/bin/env sh

portalsend() (
    dbus-send \
        --dest=org.freedesktop.portal.Desktop \
        --print-reply \
        /org/freedesktop/portal/desktop \
        org.freedesktop.portal.OpenURI.OpenURI \
        string: \
        string:"${1}" \
        dict:string:string:
)

if portalsend "${1}"; then
    echo 'Portal'
    exit 0
fi

echo 'Direct'
xdg-open-dispatch "${@}"
